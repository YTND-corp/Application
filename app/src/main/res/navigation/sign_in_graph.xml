<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/sign_in_graph"
        app:startDestination="@id/signInFragment"
        tools:ignore="UnusedNavigation">
    <fragment
            android:id="@+id/signInFragment"
            android:name="uz.mod.templatex.ui.signIn.SignInFragment"
            android:label="@string/title_sign_in"
            tools:layout="@layout/sign_in_fragment">
        <action
                android:id="@+id/action_signInFragment_to_recoveryPasswordFragment"
                app:destination="@id/recoveryPasswordFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/recoveryPasswordFragment"
            android:name="uz.mod.templatex.ui.recoveryPassword.RecoveryPasswordFragment"
            android:label="@string/title_recovery"
            tools:layout="@layout/recovery_password_fragment"/>

</navigation>