<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/windowBackgroundColor" />
        </shape>
    </item>

    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="@dimen/divider_line_height" />
            <solid android:color="@color/windowBackgroundColor" />
            <padding android:left="56dp" />
        </shape>
    </item>

    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="@dimen/divider_line_height" />
            <solid android:color="@color/dividerLineColor" />
            <padding android:left="56dp" />
        </shape>
    </item>

    <item
            android:drawable="@drawable/ic_chevron_right"
            android:gravity="end"
            android:right="@dimen/activity_horizontal_margin" />

</layer-list>