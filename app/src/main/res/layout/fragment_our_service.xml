<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/frequent_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/frequently_asked_question_title"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />


    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/frequent_questions">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/deliveryAndSampleSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_rounded_gray_stroke"
                    android:padding="8dp"
                    android:text="@string/delivery_and_sample_section"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/askQuestionSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_rounded_gray_stroke"
                    android:padding="8dp"
                    android:text="@string/ask_question_section"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:textStyle="bold" />
        </LinearLayout>

    </HorizontalScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/first_vertical_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/second_vertical_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.66" />


        <LinearLayout
                android:id="@+id/call_us_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/first_vertical_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bg_solid_gray"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_outgoing_call" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/call_us"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_smaller" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/write_us_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/second_vertical_divider"
                app:layout_constraintStart_toStartOf="@id/first_vertical_divider"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bg_solid_gray"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_message_us" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/write_to_us"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_smaller" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ask_question_holder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/second_vertical_divider"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/bg_solid_gray"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_question_mark" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/ask_question_from_us"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_smaller" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>