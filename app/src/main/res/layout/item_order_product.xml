<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="item"
                type="uz.mod.templatex.model.remote.response.profile.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/myOrderImageImg"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profile_my_orders_placeholder" />

        <TextView
                android:id="@+id/myOrderBrandTv"
                style="@style/Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="@{item.brand}"
                android:textAllCaps="true"
                android:textColor="@color/blackTextColor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/myOrderImageImg"
                app:layout_constraintTop_toTopOf="@+id/myOrderImageImg"
                tools:text="Jaded London" />

        <TextView
                android:id="@+id/myOrderDescriptionTv"
                style="@style/Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-4dp"
                android:maxLines="2"
                android:text="@{item.name}"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/myOrderImageImg"
                app:layout_constraintTop_toBottomOf="@+id/myOrderBrandTv"
                tools:text="EXCLUSIVEPANELLED WIDE LEG â€” JDJKDghoseasdfs" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttributes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/myOrderImageImg"
                app:layout_constraintTop_toBottomOf="@+id/myOrderDescriptionTv"
                tools:itemCount="3"
                tools:listitem="@layout/item_order_attribute" />

        <TextView
                android:id="@+id/myOrderPriceTv"
                style="@style/Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="@{item.currency.get(0).printPrice()}"
                android:textColor="@color/blackTextColor"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/myOrderImageImg"
                app:layout_constraintTop_toBottomOf="@+id/rvAttributes"
                tools:text="98 313 545 UZS" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>