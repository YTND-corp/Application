<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="buttonStyle">@style/ContainedButtonStyle</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/unfocusedHintTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="colorControlNormal">@color/colorEditTextBottomLine</item>
        <item name="colorControlActivated">@color/colorEditTextBottomLine</item>
        <item name="colorControlHighlight">@color/colorEditTextBottomLine</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorControlNormal">#212121</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_line_height</item>
        <item name="android:background">@color/dividerLineColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="android:icon">@drawable/ic_drawer</item>
        <item name="color">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="CircularProgress">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Light">
        <item name="android:fontFamily">@font/light</item>
        <item name="fontFamily">@font/light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Regular">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="SemiBold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Bold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ExtraBold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/extra_bold</item>
        <item name="fontFamily">@font/extra_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ContainedButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/compound_button_text_selector</item>
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:background">@drawable/contained_button_shape</item>
    </style>

    <style name="OutlinedButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/outlined_button_text_color</item>
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:background">@drawable/outlined_button_shape</item>
    </style>

    <style name="TextButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/outlined_button_text_color</item>
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:background">@color/whiteColor</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/focusedHintTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="helperTextTextAppearance">@style/HelperText</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/unfocusedHintTextColor</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TitleTextStyle" parent="SemiBold">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">-4sp</item>
    </style>

    <style name="CatalogTabTextStyle" parent="SemiBold">
        <item name="android:textSize">@dimen/text_size_smaller</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="SearchFieldStyle" parent="Regular">
        <item name="android:textSize">@dimen/text_size_smaller</item>
        <item name="android:gravity">start</item>
        <item name="android:hint">@string/hint_catalog_search</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/unfocusedHintTextColor</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:background">@drawable/bg_search_field</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/unfocusedHintTextColor</item>
        <item name="android:drawablePadding">4dp</item>
    </style>


</resources>
