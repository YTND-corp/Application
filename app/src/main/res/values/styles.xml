<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackgroundWhiteColor</item>
        <item name="buttonStyle">@style/ContainedButtonStyle</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/unfocusedHintTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:background">@color/windowBackgroundWhiteColor</item>
    </style>

    <style name="FullScreenDialog" parent="AppTheme">
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="NegativeButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_line_height</item>
        <item name="android:background">@drawable/divider</item>
    </style>

    <style name="CircularProgress">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Light">
        <item name="android:fontFamily">@font/light</item>
        <item name="fontFamily">@font/light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Regular">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Medium">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Bold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ContainedButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/compound_button_text_selector</item>
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:background">@drawable/contained_button_shape</item>
    </style>

    <style name="BorderlessButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/outlined_button_text_color</item>
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:background">@drawable/outlined_button_shape</item>
    </style>

    <style name="OutlinedButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/outlined_button_text_color</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TextButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/outlined_button_text_color</item>
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:background">@color/whiteColor</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/transparentColor</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="helperTextTextAppearance">@style/HelperText</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/unfocusedHintTextColor</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TitleTextStyle" parent="Medium">
        <item name="android:fontFamily">@font/bold</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">-4sp</item>
    </style>

    <style name="CatalogTabTextStyle" parent="Medium">
        <item name="android:textSize">@dimen/text_size_smaller</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="SearchFieldStyle" parent="Regular">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:hint">@string/hint_catalog_search</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/unfocusedHintTextColor</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:background">@drawable/bg_search_field</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/unfocusedHintTextColor</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="SearchLabelStyle" parent="Regular">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:background">@drawable/bg_search_label</item>
    </style>

    <style name="ProfileTextStyle" parent="Regular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:paddingBottom">12.5dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ChipTextStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="chipCornerRadius">0.5dp</item>
        <item name="chipBackgroundColor">@color/bg_chip</item>
        <item name="chipStrokeColor">@color/chip_text</item>
        <item name="android:textSize">11sp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="SupportCenterTopItemTextStyle" parent="Regular">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="SupportCenterItemTextStyle" parent="Bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SupportCenterWhiteButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:background">@drawable/outlined_button_shape</item>
    </style>

    <style name="SupportCenterBlackButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:background">@drawable/contained_button_shape</item>
    </style>

    <style name="ProfileAuthorizedItemTextStyle" parent="Regular">
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>
</resources>
